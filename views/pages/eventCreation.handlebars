{{#> layouts/app page-title="Events"}}

	{{!-- Going to add css to head block later --}}
	{{#*inline "head-block"}}
	<link rel="stylesheet" type="text/css" href="/css/createEvent.css">
	{{/inline}}

	{{!-- The main block for content --}}
	{{#*inline "main-block"}}
	
	{{!-- Upper Titles --}}
	<div class="titles">
		<a href="javascript:history.back()">Back</a>
		<h2>Create an Event</h2>
		<hr> 
	</div>

	{{!-- Form Creation --}}
	<form class="loginbox" autocomplete="off">
   		<input placeholder="Name" type="text" id="title"></input><br>
    	<input placeholder="Day" type="text" id="Day"></input><br>
		<input placeholder="Time" type="text" id="start"></input><br>
    	<input placeholder="Location" type="text" id="location"></input><br>
		<input placeholder="Description" type="text" id="description"></input><br>
    	<input placeholder="Group" type="text" id="group"></input><br>
		<button id="planit">
			<a href="/events">Planit</a>
		</button>
	</form>
	{{/inline}}

{{/layouts/app}}
