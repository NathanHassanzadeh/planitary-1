					<input class="form-control" type="password" name="ch-password" id="ch-password" placeholder="New Password" required>
				</p>
				<p class="form-group">
					<label for="ch-password-confirm">Confirm Password</label>
					<input class="form-control" type="password" name="ch-password-confirm" id="ch-password-confirm" placeholder="Confirm Password" required>
				</p>
				<input class="btn" type="button" id="new-password-submit" value="Change Password">
			</form>
		</section>
	</div>

